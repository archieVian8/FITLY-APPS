<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_marginTop="120dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".ui.SignUpPersonalization">


    <TextView
        style="@style/TextView.PoppinsSemibold14sp999999"
        android:layout_width="match_parent"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:text="Before continuing,\nfill in the following data" />

    <TextView
        style="@style/TextView.PoppinsSemibold12sp999999"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:text="Upload Profile Picture (5 MB)" />

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_upload_image"
        android:layout_width="172dp"
        android:layout_height="172dp"/>

    <TextView
        style="@style/TextView.PoppinsSemibold12sp999999"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"
        android:text="Date of Birth" />

    <TextView
        android:id="@+id/select_date_of_birth"
        style="@style/TextView.PoppinsSemibold10sp020202Date"
        android:layout_width="match_parent"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="Select Date" />
    <TextView
        style="@style/TextView.PoppinsSemibold12sp999999"
        android:layout_width="match_parent"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="Gender" />

    <Spinner
        android:id="@+id/spinner"
        style="@style/Spinner.PoppinsSemibold10sp020202"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="44dp"
        android:layout_centerInParent="true"/>


    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/shape_button_primary"
        android:textSize="10sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next">

    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>